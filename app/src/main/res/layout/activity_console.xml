<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.epicodus.pdxfarmshare.ConsoleActivity">

    <EditText
        android:id="@+id/weatherTextView"
        android:layout_width="394dp"
        android:layout_height="60dp"
        android:layout_marginLeft="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintBottom_toTopOf="@+id/list_item"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteX="-15dp"
        tools:layout_editor_absoluteY="-17dp" />

    <ListView
        android:id="@+id/list_item"
        android:layout_width="380dp"
        android:layout_height="387dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="-343dp"
        android:layout_above="@+id/floatingActionButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="97dp"
        android:layout_height="63dp"
        android:baselineAlignBottom="true"
        android:clickable="true"
        app:backgroundTint="@color/colorPrimary"
        app:fabSize="mini"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/list_item"
        app:layout_constraintRight_toRightOf="@+id/list_item"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/list_item"
        app:srcCompat="@android:drawable/ic_input_add"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/list_item"
        android:layout_alignEnd="@+id/list_item"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="22dp" />

</RelativeLayout>
